<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/viewContentButton"
            android:layout_width="@dimen/_269sdp"
            android:layout_height="@dimen/_240sdp"
            android:layout_marginTop="@dimen/_23sdp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/backpackViewSection"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_23sdp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/backpackImage"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/white"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/backpack" />

            <TextView
                android:id="@+id/configName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp"
                android:gravity="center"
                android:text="Place Holder"
                android:textColor="@color/mainTextColor"
                android:textSize="@dimen/_23sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/backpackInfoSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_23sdp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backpackViewSection"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/batteryStatus"
                android:layout_width="@dimen/_245sdp"
                android:layout_height="@dimen/_39sdp"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/grey"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/batteryStatusImage"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/baseline_battery_5_bar_24" />

                <TextView
                    android:id="@+id/batteryPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:textColor="@color/mainTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bluetoothStatus"
                android:layout_width="@dimen/_245sdp"
                android:layout_height="@dimen/_39sdp"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/grey"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/bluetoothStatusImage"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/baseline_bluetooth_24" />

                <TextView
                    android:id="@+id/bluetoothState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verbonden"
                    android:textColor="@color/mainTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gpsStatus"
                android:layout_width="@dimen/_245sdp"
                android:layout_height="@dimen/_39sdp"
                android:layout_margin="@dimen/_12sdp"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/grey"
                android:gravity="center_vertical"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/gpsStateImage"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:src="@drawable/baseline_gps_fixed_24" />

                <TextView
                    android:id="@+id/gpsState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="Verbonden"
                    android:textColor="@color/mainTextColor"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>